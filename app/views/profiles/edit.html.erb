<div class="section">
<div class="container">
  <div class="columns is-centered">
    <div class="column is-4">
      <h2 class="title is-2"> Edit Your Profile </h2>
        <%= simple_form_for @profile do |f| %>
          
          <div class="field">
            <div class="control">
              <%= f.input :avatar, required: false, input_html: {class: "button is-info"}, wrapper: false, label_html: {class: "label"}, autofocus: true %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :birthday, required: false, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"}, autofocus: true %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :gender, required: false, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"}, autofocus: true %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :location, required: false, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"}, autofocus: true %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :bio, required: false, input_html: {class: "textarea"}, wrapper: false, label_html: {class: "label"}, autofocus: true, placeholder: "Self-Introduction" %>
            </div>
          </div>

          <div class="field">
          <div class="control">
            <%= f.button :submit, "Save Your Changes", class: "button is-info is-medium" %>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
</div>

