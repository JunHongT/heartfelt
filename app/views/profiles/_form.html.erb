<%= simple_form_for(@profile) do |f| %>
    <%= f.error_notification %>
        <div class="field">
            <div class="control">
                <%= f.input :expression, collection: ["Red", "Blue", "Green", "Yellow"], input_html: {class: "selectpicker is-medium"}, 
                selected: "Red", label: "Pick your colours of blessing", required: false, wrapper: false, label_html: {class: "label"}, autofocus: true %>
                <%= f.button :submit, "Send your thoughts", class: "button is-info " %>
            </div>
          </div>

        
  <% end %>