<section class="section">
  <div class="container">
    <div class="columns">
      <div class ="column is-one-quarter"></div>
      <div class="column is-half">

        <%= simple_form_for(@post) do |f| %>
          <%= f.error_notification %>
          <div class="field">
            <div class="control">
              <%= f.input :content, label: "How do you feel today?", input_html: {class: "textarea"}, 
                  wrapper: false, label_html: {class: "label"}, placeholder: "Composing a new Entry..." %>
            </div>
          </div>
          <%= f.button :submit, "Edit Entry", class: "button is-info" %>
        <% end %>


      </div>
    </div>
  </div>
</section>

  